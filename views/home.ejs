  <body>
    <div id="app">
      <form action="/api" method="POST">
        <input type="text" placeholder="Phone Number" name="phone" /><br />
        <textarea
          name="message"
          id=""
          cols="30"
          rows="10"
          placeholder="Your message"
        ></textarea>
        <br />
        <input type="submit" value="Submit" /> <br />
        <pre>
          <code> 
            /api --> Method: POST
            request.body = {
              phone: Number,
              message: String
            }
          </code>
        </pre>
      </form>
    </div>
  </body>
